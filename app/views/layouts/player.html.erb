<html>
    <head>
        <title>Player</title>
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
        <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
        <%= javascript_importmap_tags %>
    </head>
    <body>
        <main class="flex">
            <nav class="flex w-full">
                <div class="w-64 p-4 h-screen bg-gray-600 sticky top-0">
                    <div class="flex">
                        <%= image_tag 'logo.png', class: 'w-16' %>
                        <h1 class="text-md py-2 text-gray-50 font-bold hidden md:block"> Player </h1>
                    </div>
                    <ul class="flex flex-col text-gray-50">
                        <li>
                            <%= link_to player_path, class:"block px-4 py-2 hover:rounded hover:bg-gray-700" do %>
                                <span>Profile</span>
                            <% end %>
                    </ul>
                </div>
            </nav>
            <div class="p-8">
                <%= yield %>
            </div>
        </main>
    </body>
</html>