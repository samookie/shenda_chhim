<html>
    <head>
        <title>Player</title>
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
        <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
        <%= javascript_importmap_tags %>
    </head>
    <body>
        <main class="flex">
            <nav class="flex w-full">
                <div class="w-64 p-4 h-screen bg-gray-600 sticky top-0">
                    <div class="flex">
                        <h1 class="text-md py-2 text-gray-50 font-bold hidden md:block"> Player </h1>
                    </div>
                    <ul class="flex flex-col text-gray-50">
                        <li>
                            <span>
                                <%= link_to "Profile", edit_player_registration_path %>
                            </span>
                        </li>
                        <li>
                            <span>
                                <%= link_to "Inventory", inventories_path %>
                            </span>
                        </li>
                        <li>
                            <span>
                                <%= link_to "Card", cards_path %>
                            </span>
                        </li>
                        <% if player_signed_in? %>
                            <li>
                                <%= link_to "Modifier le profil", edit_player_registration_path %>
                            </li>
                            <li>
                                <%= link_to "Deconnexion", destroy_player_session_path, method: :delete %>
                            </li>
                        <% else %>
                            <li>
                                <%= link_to "Connexion", new_player_session_path %>
                            </li>
                            <li>
                                <%= link_to "Inscription", new_player_registration_path %>
                            </li>
                        <% end %>
                    </ul>
                </div>
                <%= yield %>
            </nav>
        </main>
        
    </body>
</html>