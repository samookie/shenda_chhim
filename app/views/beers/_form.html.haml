= form_with(model: beer) do |form|
  - if beer.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(beer.errors.count, "error")
        prohibited this beer from being saved:
      %ul
        - beer.errors.each do |error|
          %li= error.full_message
  %div
    = form.submit
